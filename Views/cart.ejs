<%- include('./partials/header') %>
<script src="https://cdn.tailwindcss.com"></script>
<div class="w-full h-screen flex-col gap-y-10 items-start px-20 py-20 gap-10">
  <% user.cart.forEach(item => { %>
    <div class="w-[30%]  rounded-md  mt-10">
      <div class="w-full h-auto bg-zinc-500">
        <img
          src="data:image/jpeg;base64,<%= item.image.toString('base64')%>"
          alt="Product Image"
        />
      </div>
      <div class="w-full flex justify-between px-5 py-4">
        <h3 class="text-2xl">Clinge Bag</h3>
        <div class="flex items-center gap-2">
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
          ></i>
          <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
          ></i>
        </div>
      </div>
      <div class="flex items-center justify-between px-5 py-3">
        <h4 class="text-lg">Net Total</h4>
        <h2 class="text-lg">₹ <%=Number(item.price)%><h2>
      </div>
    </div>
    <div class="w-[70%]">
      <h3 class="text-xl">Price Breakdown</h3>
      <div class="px-10 mt-5">
        <div class="flex mt-2">
          <h4 class="w-1/3">Total MRP</h4>
          <h4>₹ <%=Number(item.price)%></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Discount on MRP</h4>
          <h4>₹ <%=item.discount%></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Platform Fee</h4>
          <h4>₹ 0</h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Shipping Fee</h4>
          <h4>FREE</h4>
        </div>
      </div>
      <div class="w-full h-[1px] bg-black mt-10"></div>
      <div class="flex mt-5">
        <h3 class="w-1/3 text-xl">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">
          ₹ <%=Number(item.price) %>
        </h3>
      </div>
     
    </div>
    <hr class="mb-5">
  <% }) %>
  
</div>
<%- include('./partials/footer') %>
